<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.springboot.mapper.ResourceMapper">
    
    <!-- 资源结果映射 -->
    <resultMap id="resourceResultMap" type="org.example.springboot.entity.ForumResource">
        <id column="resource_id" property="id"/>
        <result column="resource_name" property="resourceName"/>
        <result column="description" property="description"/>
        <result column="file_path" property="filePath"/>
        <result column="file_size" property="fileSize"/>
        <result column="file_type" property="fileType"/>
        <result column="user_id" property="userId"/>
        <result column="category_id" property="categoryId"/>
        <result column="download_count" property="downloadCount"/>
        <result column="create_time" property="createTime"/>
        <result column="status" property="status"/>
        <result column="username" property="uploadUsername"/>
        <result column="category_name" property="categoryName"/>
    </resultMap>
    
    <!-- 分页查询资源 -->
    <select id="selectResourcePage" resultMap="resourceResultMap">
        SELECT 
            r.*,
            u.username,
            c.category_name
        FROM 
            resource r
        LEFT JOIN 
            user u ON r.user_id = u.user_id
        LEFT JOIN 
            resource_category c ON r.category_id = c.category_id
        <where>
            <if test="resourceName != null and resourceName != ''">
                AND r.resource_name LIKE CONCAT('%', #{resourceName}, '%')
            </if>
            <if test="categoryId != null">
                AND r.category_id = #{categoryId}
            </if>
            <if test="fileType != null and fileType != ''">
                AND r.file_type = #{fileType}
            </if>
            <if test="userId != null">
                AND r.user_id = #{userId}
            </if>
            <if test="status != null">
                AND r.status = #{status}
            </if>
        </where>
        ORDER BY r.create_time DESC
    </select>
    
    <!-- 批量删除资源 -->
    <delete id="deleteByIds">
        DELETE FROM resource
        WHERE resource_id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <!-- 更新资源下载次数 -->
    <update id="updateDownloadCount">
        UPDATE resource
        SET download_count = download_count + 1
        WHERE resource_id = #{id}
    </update>
    
    <!-- 根据用户ID获取资源列表 -->
    <select id="selectByUserId" resultMap="resourceResultMap">
        SELECT 
            r.*,
            u.username,
            c.category_name
        FROM 
            resource r
        LEFT JOIN 
            user u ON r.user_id = u.user_id
        LEFT JOIN 
            resource_category c ON r.category_id = c.category_id
        WHERE 
            r.user_id = #{userId}
        ORDER BY 
            r.create_time DESC
    </select>
    
    <!-- 根据分类ID获取资源列表 -->
    <select id="selectByCategoryId" resultMap="resourceResultMap">
        SELECT 
            r.*,
            u.username,
            c.category_name
        FROM 
            resource r
        LEFT JOIN 
            user u ON r.user_id = u.user_id
        LEFT JOIN 
            resource_category c ON r.category_id = c.category_id
        WHERE 
            r.category_id = #{categoryId}
        ORDER BY 
            r.create_time DESC
    </select>
</mapper> 